<div class="container">

	<div class="row">
		<div class="six columns">
			<h1><i class="fa fa-file-text-o" aria-hidden="true"></i> Posts</h1>
		</div>
		<div class="six columns">
			<a href="./post/new" class="button pull-right">New Post</a>
		</div>
	</div>

	<table class="full-width">
	<tr>
	<th>Title</th>
	<th>Last Modified</th>
	<th>Published</th>
	<th>Options</th>
	</tr>

	<% for Post in @posts %>
	<tr>
	<td><i class="fa fa-file-text-o" aria-hidden="true"></i> <%= Post.title %></td>
	<td><%= Post.updated_date.strftime('%d/%m/%Y (%H:%M)') %></td>
	<td>
	<% if Post.published == true %>
      Published
      <% else %>
      Draft
      <% end %>  
    </td>
	<td>
	<a href="./post/edit/<%= Post.id %>">Edit</a> | 
	<% if Post.published == true %><a href="./post/<%= Post.slug %>">View</a> |<% end %>
	<a href="./post/delete/<%= Post.id %>" onclick="return confirm('Are you sure you want to delete?');">Delete</a>
	</td>
	</tr>
	<% end %>  

	</table>

<%= will_paginate @posts %>
</div>